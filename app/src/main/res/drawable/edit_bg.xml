<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- 设置框内填充颜色 -->
    <solid android:color="#ffffff" />
    <!-- 设置边框宽度和颜色 -->
    <stroke
        android:width="1dip"
        android:color="#DBDFE2" />
    <!-- 设置圆角半径 -->
    <corners android:radius="3dp" />
    <!-- 设置边距 -->
</shape>