<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.jingna.checklistapp.page.ChangePasswordActivity">
    <RelativeLayout
        style="@style/rl_top_bar_white">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                style="@style/iv_top_back_white" />
        </RelativeLayout>
        <TextView
            android:text="修改密码"
            style="@style/tv_top_title_white" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/et_phone"
            android:inputType="number"
            android:textColor="#222222"
            android:textSize="18sp"
            android:hint="请输入手机号"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dp"
            android:background="#D1D1D1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <EditText
                android:id="@+id/edget_code"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:hint="请输入验证码"
                android:textSize="18sp"
                android:textColor="#222222"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:background="#979797"
                android:layout_width="1dp"
                android:layout_height="17dp"/>

            <TextView
                android:id="@+id/tv_get_code"
                android:gravity="center"
                android:textColor="#A02630"
                android:textSize="16sp"
                android:text="获取验证码"
                android:layout_width="88dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#D1D1D1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/btn_login"
            android:background="@drawable/shape"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:text="下一步"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="49dp" />
    </LinearLayout>
</LinearLayout>
