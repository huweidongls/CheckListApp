<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jingna.checklistapp.page.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/back"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/shut" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:text="核销记录"
            android:textColor="@color/color_ffff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:text="核销账单"
            android:textColor="@color/color_ffff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:text="修改密码"
            android:textColor="@color/color_ffff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:text="银行卡管理"
            android:textColor="@color/color_ffff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:text="积分管理"
            android:textColor="@color/color_ffff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_zfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:text="支付宝绑定"
            android:textColor="@color/color_ffff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:text="退出登录"
            android:textColor="@color/color_ffff"
            android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        >
        <TextView
            android:id="@+id/textview_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前登录用户"
            android:textColor="@color/color_ffff"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:gravity="center" />
        <TextView
            android:id="@+id/textview_user"
            android:layout_width="wrap_content"
            android:layout_below="@+id/textview_login"
            android:layout_height="wrap_content"
            android:text="客服A"
            android:textColor="@color/color_ffff"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/textview_user"
            android:layout_height="wrap_content"
            android:text="软件版本Ver.1.0"
            android:textColor="#BDCADB"
            android:textSize="10sp"
            android:layout_marginLeft="50dp"
            android:gravity="center" />
    </RelativeLayout>
    </LinearLayout>


</LinearLayout>
