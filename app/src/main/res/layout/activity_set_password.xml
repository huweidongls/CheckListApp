<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jingna.checklistapp.page.SetPasswordActivity">
    <RelativeLayout
        style="@style/rl_top_bar_white">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                style="@style/iv_top_back_white" />
        </RelativeLayout>
        <TextView
            android:text="修改密码"
            style="@style/tv_top_title_white" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <EditText
            android:id="@+id/edget_pwd"
            android:inputType="textPassword"
            android:layout_gravity="center_vertical"
            android:hint="设置新密码"
            android:textSize="18sp"
            android:textColor="#C4C4C4"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_get_img"
            android:layout_marginTop="15dp"
            android:src="@mipmap/yanjing"
            android:layout_width="28dp"
            android:layout_height="28dp" />
    </LinearLayout>
    <View
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#D1D1D1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/btn_login"
        android:background="@drawable/shape"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:text="完成"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="49dp" />
</LinearLayout>
